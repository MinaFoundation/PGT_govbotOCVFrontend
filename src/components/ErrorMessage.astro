---
interface Props {
  message: string;
  type: "error" | "success";
  txHash?: string;
}

const { message, type, txHash } = Astro.props;
---

<div
  class={`p-4 rounded-md ${
    type === "error" ? "bg-red-100 text-red-700" : "bg-green-100 text-green-700"
  } mb-4 w-full`}
  role="alert"
>
  <p class="font-medium break-words whitespace-pre-line">
    {message}
    {
      txHash && (
        <a
          href={`https://minascan.io/devnet/tx/${txHash}`}
          target="_blank"
          rel="noopener noreferrer"
          class="underline hover:text-blue-600"
        >
          View transaction on Minascan
        </a>
      )
    }
  </p>
</div>
